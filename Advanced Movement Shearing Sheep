elseif blockbelow.name == "minecraft:obsidian" then
turtle.turnLeft()
turtle.place()
turtle.turnRight()
turtle.forward()
elseif blockbelow.name == "minecraft:gold_block" then
 turtle.turnRight()
  turtle.select(2)
  turtle.drop()
 
  turtle.turnLeft()
  turtle.turnLeft()
  turtle.forward()
Gold = false
elseif blockbelow.name == "minecraft:log" then
  turtle.forward()
elseif blockbelowe.name == "minecraft:diamond_block" then
turtle.turnLeft()
turtle.suck()
turtle.turnRight()
turtle.forward()
elseif blockbelow.name == "minecraft:quartz_block then
turtle.turnRight()

local puppy = true
 
while puppy do
local success, blockbelow =  turtle.inspectDown()
 
if blockbelow.name == "minecraft:cobblestone" then
  turtle.forward()
 
elseif blockbelow.name == "minecraft:brick_block" then  
 for n =1, 16 do
 
   turtle.suck()
   
  end
 turtle.turnLeft()
 turtle.turnLeft()
 turtle.forward()
 
 elseif blockbelow.name == "minecraft:gold_block" then
 for n = 1, 16 do
   turtle.select(n)
   turtle.drop()
 end
 turtle.turnLeft()
 turtle.turnLeft()
 turtle.forward()
 
 puppy = false
 
 else
turtle.turnRight()
turtle.forward()
end
end
